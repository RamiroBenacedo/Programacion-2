<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>


<body>
    <%- include('./partials/headerLogueado') %>

    <main>
        <div class="user-detail container">
            <section class="top main-content">
                <img class="profile" src="<%= locals.user.foto_de_perfil %>">
                <div class="info-usuario info-usuario-color">
                    <p>
                        <%= user.nombre %>
                    </p>
                    <% if (locals.user !=undefined && clienteId == user.id) { %>
                        <div class="contenedor-editarPerfil">
                            <a href="/users/editarPerfil/id/<%= user.id %>"><i class="fa-regular fa-pen-to-square fa-xl"></i></a></div>
                    <% } %> 
                    <a class="follow" href="">seguir</a>
                    <ul class="meta">
                        <li><%= posteos.length %> posteos</li>
                        <li>200 seguidores</li>
                        <li>300 seguidos</li>
                    </ul>
                </div>
            </section>
            <section class="bottom">
                <% for( let i=0; i < posteos.length; i++ ) { %>
                    <article class="post">
                        <a href="/post/detalle/id/<%= posteos[i].id %>">
                            <img src="<%= posteos[i].nombreImg %>" alt="Posteo">
                        </a>
                    </article>
                    <% } %>
            </section>
        </div>
</main>
    </main>

    <%- include('./partials/footer') %>

</body>

</html>


