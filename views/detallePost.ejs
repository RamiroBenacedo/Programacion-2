<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>


<body>
    <%- include('./partials/header') %>

    <main>
        <div class="post-detail container">
            <% for( let i=0; i < posteos.length; i++ ) { %>
                <% if (i+1==idPost) { %>
            <section class="center main-content post">
                <div class="info-usuario">
                    <img class="perfil" src="<%= posteos[i].fotoPerfil %>">
                    <p><a href="/users/detalleUsuario/id/<%= posteos[i].clienteid %>"><%= posteos[i].nombreUsuario %></a></p>
                </div>
                <img class="photo" src="<%= posteos[i].nombreImg %>" alt="">
            </section>
            <section class="right">
                <h4>Comentarios</h4>
                <section class="comments">
                    <form action="" class="comment-form">
                        <input type="text" class="input" placeholder="Agregar comentario">
                        <button type="submit">Comentar</button>
                    </form>
                    <div>
                        <% for( let k=0; k < posteos[i].comentarios.length; k++ ) { %>
                            <article class="comment">
                                <img class = "perfil" src="<%= posteos[i].comentarios[k].fotoPerfil %>" alt="<%= posteos[i].nombreUsuario %>">
                                <section class="content">
                                    <a class="user" href="/users/detalleUsuario/id/<%= posteos[i].comentarios[k].clienteid %>"><%= posteos[i].comentarios[k].nombre%></a>
                                    <span class="text"><%= posteos[i].comentarios[k].textoComentario %></span>
                                </section>
                            </article>
                            <% } %>
                        </div>
                        </section>
                        </section>
                        <% } %>
                        <% } %>  
        </div>
    </main>

    <%- include('./partials/footer') %>

</body>

</html>