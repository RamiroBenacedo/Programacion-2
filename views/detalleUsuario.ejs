<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>


<body>
    <% if (locals.user !=undefined) { %>
        <%- include('./partials/headerLogueado') %>
        <% } else { %>
            <%- include('./partials/header') %>
        <% } %>

            <main>
                <% if (idUsuario<0) { %>
                    <h2 class="sin-resultados">No hay resultados</h2>
                    <% } else {%>
                        <div class="user-detail container">
                            <section class="tp main-content">
                                <img class="post" src="<%= usuario.foto_de_perfil %>" alt="Foto de perfil">
                                <div class="info-usuario info-usuario-color">
                                    <p>
                                        <%= usuario.nombre %>
                                    </p>
                                    <a class="follow" href="">seguir</a>
                                    <ul class="meta">
                                        <li><%= posteos.length %> posteos</li>
                                        <li>1000 seguidores</li>
                                        <li>500 seguidos</li>
                                    </ul>
                                </div>
                            </section>
                            <section class="bottom">
                                <% for( let i=0; i < posteos.length; i++ ) { %>
                                        <article class="post">
                                            <a href="/detalle/post/id/<%= posteos[i].id %>">
                                                <img src="<%= posteos[i].nombreImg %>" alt="Posteo">
                                            </a>
                                        </article>
                                            <% } %>
                            </section>
                        </div>
                        <% } %>
    </main>

    <%- include('./partials/footer') %>

</body>

</html>