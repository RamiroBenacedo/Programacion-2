<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>


<body>
    <%- include('./partials/header') %>

    <main>
         <% if (locals.user !=undefined) { %>
            <%- include('./partials/headerLog') %>
            <% } else { %>
                <%- include('./partials/header') %>
            <% } %>
            <main>
                <% if (clienteId<0) { %>
                    <h2 class="sin-resultados">No hay resultados para ese id. Por favor eliia otro</h2>
                    <% } else {%>
                        <div class="user-detail container">
                            <section class="top main-content">
                                <img class="post" src="<%= Usuario.foto_de_perfil %>" alt="Foto de perfil">
                                <div class="info-usuario info-usuario-color">
                                    <p>
                                        <%= Usuario.nombre %>
                                    </p>
                                    <a class="follow" href="">seguir</a>
                                    <ul class="meta">
                                        <li><%= posteosUsuario.length %> posteos</li>
                                        <li>200 seguidores</li>
                                        <li>300 seguidos</li>
                                    </ul>
                                </div>
                            </section>
                            <section class="bottom">
                                <% for( let i=0; i < posteosUsuario.length; i++ ) { %>
                                        <article class="post">
                                            <a href="/posts/detalle/id/<%= posteosUsuario[i].id %>">
                                                <img src="<%= posteosUsuario[i].nombreImg %>" alt="Posteo">
                                            </a>
                                        </article>
                                            <% } %>
                            </section>
                        </div>
                        <% } %>
    </main>

    <%- include('./partials/footer') %>

</body>

</html>